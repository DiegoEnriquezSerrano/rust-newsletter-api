# ## Base URL where the application is reachable (include scheme). Used to build absolute links.
# APP_APPLICATION__BASE_URL="http://127.0.0.1"

# ## HMAC secret used to sign/verify messages, cookies, tokens, or webhooks.
# ## Use a long, random, high-entropy string in production.
# APP_APPLICATION__HMAC_SECRET="super-long-and-secret-random-key-needed-to-verify-message-integrity"

# ## Host/interface the application binds to (IP or hostname).
# APP_APPLICATION__HOST=127.0.0.1

# ## Port the application server listens on.
# APP_APPLICATION__PORT=8000

# ## Name of the Postgres database the app connects to.
# APP_DATABASE__DATABASE_NAME="newsletter"

# ## Database server host or IP address.
# APP_DATABASE__HOST="127.0.0.1"

# ## Password for the database user.
# APP_DATABASE__PASSWORD="password"

# ## Port the database server listens on (default Postgres port is 5432).
# APP_DATABASE__PORT=54321

# ## Whether SSL/TLS is required for database connections (true/false).
# APP_DATABASE__REQUIRE_SSL=false

# ## Username used for client to authenticate to the database.
# APP_DATABASE__USERNAME="postgres"

# ## API key or token to authenticate with the email provider.
# APP_EMAIL_CLIENT__AUTHORIZATION_TOKEN="my-secret-token"

# ## Base URL or hostname of the email provider API.
# APP_EMAIL_CLIENT__BASE_URL="localhost"

# ## Default "from" email address for outgoing messages.
# APP_EMAIL_CLIENT__SENDER_EMAIL="test@gmail.com"

# ## Timeout for email provider requests in milliseconds.
# APP_EMAIL_CLIENT__TIMEOUT_MILLISECONDS=10000

# ## Redis connection URI used for caching, job queues, sessions, etc.
# APP_REDIS_URI="redis://127.0.0.1:63791"


## Full Postgres connection string used by some libraries/drivers (sqlx).
DATABASE_URL="postgres://postgres:password@localhost:54321/newsletter"


## Postgres listening port.
PGPORT=54321

## Database name for Postgres container/environment.
POSTGRES_DB=newsletter

## Host for Postgres container/environment.
POSTGRES_HOST=localhost

## Password for Postgres container/environment.
POSTGRES_PASSWORD=password

## Username for Postgres container/environment.
POSTGRES_USER=postgres
